# Измени app на своё уникальное имя
app = "bot-z0lezq"
primary_region = "nrt"

[build]
  dockerfile = "Dockerfile"

[env]
  PORT = "8080"
  DB_PATH = "/data/deck_state.sqlite3"

[[services]]
  internal_port = 8080
  protocol = "tcp"

  [[services.ports]]
    port = 80
  [[services.ports]]
    port = 443

[[mounts]]
  source = "data"
  destination = "/data"
